<div class="sidebar">
  <h3 class="logo"><%= restaurant.name %></h3>

  <nav class="menu">
    <h4 class="menu-group-title">
      <a href="/orders" class="menu-item">All Orders</a>
    </h4>
    <ul class="menu-group-list">
      <li><a href="/orders/pending" class="menu-item">Pending</a></li>
      <li><a href="/orders/completed" class="menu-item">Completed</a></li>
      <li><a href="/orders/failed" class="menu-item">Failed</a></li>
      <li><a href="/stats">Stats</a></li>
      <li><a href="/settings">Settings</a></li>
    </ul>
  </nav>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll(".menu a");

    links.forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("active");
      } else {
        link.classList.remove("active"); // Ensure no duplicates
      }
    });
  });
</script>
